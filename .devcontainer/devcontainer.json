{
    "name": "IC Metrics",
    "image": "mcr.microsoft.com/devcontainers/ruby:3.4",
    "features": {
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "postCreateCommand": "bundle install",
    "customizations": {
        "vscode": {
            "extensions": [
                "shopify.ruby-lsp"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.tabSize": 2,
                "[ruby]": {
                    "editor.defaultFormatter": "Shopify.ruby-lsp"
                }
            }
        }
    },
    "containerEnv": {
        "GITHUB_TOKEN": "${localEnv:GITHUB_TOKEN}",
        "GITHUB_ORG": "${localEnv:GITHUB_ORG}",
        "DUST_API_KEY": "${localEnv:DUST_API_KEY}",
        "DUST_WORKSPACE_ID": "${localEnv:DUST_WORKSPACE_ID}",
        "DUST_AGENT_ID": "${localEnv:DUST_AGENT_ID}"
    },
    "mounts": [
        "source=${localWorkspaceFolder}/data,target=/workspaces/ic-metrics/data,type=bind"
    ],
    "remoteUser": "vscode"
}
